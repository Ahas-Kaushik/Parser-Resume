# ========================================
# AI-Powered Job Portal - Backend Configuration
# ========================================
# Copy this file to .env and update with your values
# DO NOT commit .env to git!

# JWT Secret (REQUIRED)
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=change-me-to-a-long-random-string-minimum-32-characters-required

# JWT Settings
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=7

# Database Configuration
# SQLite (Development)
DATABASE_URL=sqlite:///./app.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/jobportal_db

# File Upload Settings
UPLOAD_DIR=./storage
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,docx,txt

# Email Configuration (Optional)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@jobportal.com

# Application Settings
DEBUG=true
APP_NAME=AI-Powered Job Portal
APP_VERSION=1.0.0

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Chat Settings
CHAT_MESSAGE_LIMIT=100
CHAT_HISTORY_DAYS=30

# Resume Screening Settings
DEFAULT_SIMILARITY_THRESHOLD=0.6
DEFAULT_MIN_SCORE=70.0